<!-- 
    CommandBar is a bar on the bottom of the screen. 
    It contains action buttons from <F1> to <F2>  
 -->
<Module Name="CommandBar">

<!-- Not used here for now
<Require>
    <Module Name="Window">
</Require>

<Variables>
    <Variable Name="Height" Value="15" Visibility="Module"/>
</Variables>
-->

<!-- Relay on default behaviour instead of setting it by hand 
<GraphicalObject Name="CommandBar" PositionX="0" PositionY="#[$(Window::SizeY) - $(Height)]" SizeX="0" SizeY="$(Height)"> 
